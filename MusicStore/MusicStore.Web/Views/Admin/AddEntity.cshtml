@{
    ViewBag.Title = "Admin";
}

<div ng-controller="AdminController" class="row" novalidate>
    <div class="col-md-6">
        <h3>Add artist:</h3>
        <form name="addArtistForm">
            <fieldset class="form-group">
                <label for="artistName">Name</label>
                <input id="artistName" name="artistName" ng-model="artistName" class="form-control"/>
            </fieldset>
            <fieldset class="form-group">
                <label for="artistCountry">Country</label>
                <input id="artistCountry" name="artistCountry" ng-model="artistCountry" class="form-control"/>
            </fieldset>
            <button type="submit" ng-click="saveArtist()" class="btn btn-primary">Save</button>
        </form>
    </div>
    <div class="col-md-6">
        <h3>Add album:</h3>
        <form name="addAlbumForm" novalidate>
            <fieldset class="form-group">
                <label for="albumName">Name</label>
                <input id="albumName" name="albumName" ng-model="albumName" class="form-control" />
            </fieldset>
            <fieldset class="form-group">
                <label for="albumArtist">Artist</label>
                <input id="albumArtist" name="albumArtist" ng-model="albumArtist" class="form-control"/>
            </fieldset>
            <fieldset class="form-group">
                <label for="albumYear">Year</label>
                <input id="albumYear" name="albumYear" ng-model="albumYear" class="form-control" />
            </fieldset>
            <button type="submit" ng-click="saveAlbum()" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>