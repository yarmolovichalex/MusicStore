@{
    ViewBag.Title = "Admin";
}

<div ng-controller="AdminController">
    <h3>Add artist:</h3>
    <form name="addArtistForm" ng-submit="submit()">
        <fieldset class="form-group">
            <label for="artistName">Name</label>
            <input id="artistName" name="name" ng-model="name" class="form-control" />
        </fieldset>
        <fieldset class="form-group">
            <label for="artistCountry">Country</label>
            <input id="artistCountry" name="country" ng-model="country" class="form-control" />
        </fieldset>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>